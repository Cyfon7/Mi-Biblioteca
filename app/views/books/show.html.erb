<p id="notice"><%= notice %></p>
<div class="container">
  <table class="table">
    <tr>
      <th>Title:</th>
      <td><%= @book.title %></td>
    </tr>
    <tr>
      <th>Author:</th>
      <td><%= @book.author %></td>
    </tr>
    <tr>
      <th>Status:</th>
      <td><%= @book.status %></td>
    </tr>
    <tr>
      <th>Borrowed date:</th>
      <td><%= @book.borrowed_date.strftime("%d-%m-%Y") %></td>
    </tr>
    <tr>
      <th>Returned date:</th>
      <td><%= @book.returned_date.strftime("%d-%m-%Y") %></td>
    </tr>
  </table>

  <%= link_to 'Edit', edit_book_path(@book), class:"btn btn-primary text-white"%>
  <%= link_to 'Back', books_path, class:"btn btn-primary text-white" %>
</div>
